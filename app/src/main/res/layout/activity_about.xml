<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_subtitle"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Developers Section -->
        <TextView
            android:id="@+id/tvDevelopersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developers_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Developer 1 -->
        <ImageView
            android:id="@+id/ivDeveloper1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvDevelopersTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDeveloper1Name"
            android:contentDescription="@string/developer1_image_desc"/>

        <TextView
            android:id="@+id/tvDeveloper1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer1_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/ivDeveloper1"
            app:layout_constraintStart_toEndOf="@id/ivDeveloper1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDeveloper1Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer1_role"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/tvDeveloper1Name"
            app:layout_constraintStart_toStartOf="@id/tvDeveloper1Name"/>

        <!-- Developer 2 -->
        <ImageView
            android:id="@+id/ivDeveloper2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivDeveloper1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDeveloper2Name"
            android:contentDescription="@string/developer2_image_desc"/>

        <TextView
            android:id="@+id/tvDeveloper2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer2_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/ivDeveloper2"
            app:layout_constraintStart_toEndOf="@id/ivDeveloper2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDeveloper2Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer2_role"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/tvDeveloper2Name"
            app:layout_constraintStart_toStartOf="@id/tvDeveloper2Name"/>

        <!-- Add more developers as needed -->

        <!-- App Version -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/ivDeveloper2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>